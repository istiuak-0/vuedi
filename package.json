{
  "name": "@vuedi/root",
  "description": "Monorepo for Vue Dependency Injection (DI) libraries",
  "private": true,
  "scripts": {
    "i:all": "pnpm --recursive install",
    "clean": "find . -name node_modules -type d -exec rm -rf {} + && rm -rf node_modules && pnpm --recursive exec rimraf dist",
    "vuedi:build": "pnpm --filter vuedi build",
    "vuedi:dev": "pnpm --filter vuedi dev",
    "playground:dev": "pnpm --filter @vuedi/playground dev",
    "typecheck": "pnpm --recursive typecheck",
    "core:test": "pnpm --filter @vuedi/core  test",
    "lint": "pnpm --recursive lint"
  },
  "devDependencies": {
    "typescript": "~5.9.3",
    "rimraf": "^6.0.1"
  },
  "packageManager": "pnpm@10.18.0"
}